## -*- mode: shell-script; -*- 
##
## To be able to make changes to the part of configuration created
## from this configlet you need to copy this file to the directory
## fwbuilder/configlets/nftables/ in your home directory and modify it.
## Double "##" comments are removed during processing but single "#"
## comments are be retained and appear in the generated script. Empty
## lines are removed as well.  
##
## Configlets support simple macro language with these constructs:
## {{$var}} is variable expansion
## {{if var}} is conditional operator.

{{if using_ipset}}

check_module_ipset() {
    :
}

ensure_table() {
    family=$1
    table=$2
    $NFT list table $family $table >/dev/null 2>&1 || $NFT add table $family $table
}

ensure_set() {
    family=$1
    table=$2
    set_name=$3
    set_type=$4
    $NFT list set $family $table $set_name >/dev/null 2>&1 || \
        $NFT add set $family $table $set_name { type $set_type\; flags interval\; }
}

flush_address_table_sets() {
    addrtbl_name=$1
    for table in filter mangle nat
    do
        ensure_table ip $table
        ensure_set ip $table $addrtbl_name ipv4_addr
        $NFT flush set ip $table $addrtbl_name

        ensure_table ip6 $table
        ensure_set ip6 $table $addrtbl_name ipv6_addr
        $NFT flush set ip6 $table $addrtbl_name
    done
}

ensure_address_table_sets() {
    addrtbl_name=$1
    for table in filter mangle nat
    do
        ensure_table ip $table
        ensure_set ip $table $addrtbl_name ipv4_addr
        ensure_table ip6 $table
        ensure_set ip6 $table $addrtbl_name ipv6_addr
    done
}

add_element_to_tables() {
    addrtbl_name=$1
    family=$2
    addr=$3
    for table in filter mangle nat
    do
        $NFT add element $family $table $addrtbl_name { $addr }
    done
}

delete_element_from_tables() {
    addrtbl_name=$1
    family=$2
    addr=$3
    for table in filter mangle nat
    do
        $NFT delete element $family $table $addrtbl_name { $addr } >/dev/null 2>&1
    done
}

reload_address_table() {
    addrtbl_name=$1
    data_file=$2

    test -z "$addrtbl_name" -o -z "$data_file" && {
        echo "Usage: reload_address_table address_table_object_name file_name"
        exit 1
    }

    flush_address_table_sets $addrtbl_name

    DATAFILE_SIZE=`wc -l $data_file|cut -d" " -f 1`
    echo "Processing $DATAFILE_SIZE items in file: $data_file"

    grep -Ev '^#|^;|^\s*$' $data_file | while read L ; do
        set $L
        addr=$1
        if echo $addr | grep -q ":"
        then
            add_element_to_tables $addrtbl_name ip6 $addr
        else
            add_element_to_tables $addrtbl_name ip $addr
        fi
    done
}

add_to_address_table() {
    addrtbl_name=$1
    data_file=$2
    address=$3

    test -z "$addrtbl_name" -o -z "$data_file" -o -z "$address" && {
        echo "Usage: add_to_address_table address_table_object_name file_name address"
        exit 1
    }

    echo $address >> $data_file
    ensure_address_table_sets $addrtbl_name

    if echo $address | grep -q ":"
    then
        add_element_to_tables $addrtbl_name ip6 $address
    else
        add_element_to_tables $addrtbl_name ip $address
    fi
}

remove_from_address_table() {
    addrtbl_name=$1
    data_file=$2
    address=$3

    test -z "$addrtbl_name" -o -z "$data_file" -o -z "$address" && {
        echo "Usage: remove_from_address_table address_table_object_name file_name address"
        exit 1
    }

## note that $address may contain "/"
    escaped_addr=$(echo $address | sed 's!/!\\/!')
    sed -i "/^ *$escaped_addr *\$/d" $data_file
    ensure_address_table_sets $addrtbl_name

    if echo $address | grep -q ":"
    then
        delete_element_from_tables $addrtbl_name ip6 $address
    else
        delete_element_from_tables $addrtbl_name ip $address
    fi
}

test_address_table() {
    addrtbl_name=$1
    address=$2

    test -z "$addrtbl_name" -o -z "$address" && {
        echo "Usage: test_address_table address_table_object_name address"
        exit 1
    }

    ensure_address_table_sets $addrtbl_name

    if echo $address | grep -q ":"
    then
        family="ip6"
    else
        family="ip"
    fi

    for table in filter mangle nat
    do
        $NFT get element $family $table $addrtbl_name { $address } >/dev/null 2>&1 && return 0
    done
    return 1
}

load_run_time_address_table_files() {
    :
    {{$load_files_commands}}
}

{{endif}}

check_file() {
    test -r "$2" || {
        echo "Can not find file $2 referenced by address table object $1"
        exit 1
    }
}

